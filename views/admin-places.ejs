<!DOCTYPE html>
<html>
<head>
  <title>Admin · Safe Places</title>
</head>
<body>
  <h2>Admin · Safe Check-in Points</h2>

  <h3>Pending approval</h3>
  <% if (!pending.length) { %>
    <p>No pending suggestions.</p>
  <% } else { %>
    <table border="1" cellpadding="6">
      <tr>
        <th>Name</th><th>Area</th><th>Lat</th><th>Lng</th><th>Description</th><th>Actions</th>
      </tr>
      <% pending.forEach(p => { %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.area %></td>
          <td><%= p.lat %></td>
          <td><%= p.lng %></td>
          <td><%= p.description || '-' %></td>
          <td>
            <form action="/places/admin/approve/<%= p._id %>" method="POST" style="display:inline">
              <button type="submit">Approve</button>
            </form>
            <form action="/places/admin/delete/<%= p._id %>" method="POST" style="display:inline" onsubmit="return confirm('Delete this suggestion?')">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  <% } %>

  <h3 style="margin-top:24px;">Approved</h3>
  <% if (!approved.length) { %>
    <p>No approved places yet.</p>
  <% } else { %>
    <table border="1" cellpadding="6">
      <tr>
        <th>Name</th><th>Area</th><th>Lat</th><th>Lng</th><th>Description</th><th>Delete</th>
      </tr>
      <% approved.forEach(p => { %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.area %></td>
          <td><%= p.lat %></td>
          <td><%= p.lng %></td>
          <td><%= p.description || '-' %></td>
          <td>
            <form action="/places/admin/delete/<%= p._id %>" method="POST" onsubmit="return confirm('Delete this place?')">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  <% } %>

  <p style="margin-top:16px;"><a href="/welcome">Back to Home</a></p>
</body>
</html>
